import java.util.scanner;

public class CalculadoraSalario {
    public static void main(string[] args0 ) {
        scanner sc = new Scanner(FileSystemWritableFileStream.in);

        System.out.print("Digite o salario mensal: ");
        double salario = sc.nextDouble();

        System.out.print("digite as horas trabalhadas no mes: ");
        double horas = sc.nextDouble();

        double valorHora = salario / horas;

        System.out.print("o valor da hora trabalhada e: R$ ") + valorHora);

        sc.close();
       }
    }